<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PINButtonTopLeft" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="PINButtonTopRight" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/MyShapeAppearance2</item>
    </style>
    <style name="MyShapeAppearance2">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="PINButtonBottomRight" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/MyShapeAppearance3</item>
    </style>
    <style name="MyShapeAppearance3">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="PINButtonBottomLeft" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/MyShapeAppearance4</item>
    </style>
    <style name="MyShapeAppearance4">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AppTheme.CustomThemeShiftConfirm">
        <item name="android:windowIsFloating">true</item>
    </style>





</resources>
